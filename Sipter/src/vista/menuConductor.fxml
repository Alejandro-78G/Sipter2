<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controlador.ControladorMenuConductor"
            prefWidth="400" prefHeight="300">
    <Label text="Menú del Conductor" layoutX="120" layoutY="20" style="-fx-font-size:18px; -fx-font-weight:bold;"/>

    <Button text="Confirmar Salida" layoutX="120" layoutY="70" prefWidth="160" onAction="#confirmarSalida"/>
    <Button text="Confirmar Llegada" layoutX="120" layoutY="110" prefWidth="160" onAction="#confirmarLlegada"/>
    <Button text="Reportar Inasistencia" layoutX="120" layoutY="150" prefWidth="160" onAction="#reportarInasistencia"/>
    <Button text="Ver Pasajeros" layoutX="120" layoutY="190" prefWidth="160" onAction="#verPasajeros"/>
    <Button text="Cerrar Sesión" layoutX="120" layoutY="230" prefWidth="160" onAction="#cerrarSesion"/>
</AnchorPane>