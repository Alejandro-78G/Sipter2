<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="Controlador.controLadorDelogin"
            prefWidth="400" prefHeight="300">

    <children>
        <VBox alignment="CENTER" spacing="10" layoutX="50" layoutY="40" prefWidth="300">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Título -->
            <Label text="Iniciar Sesión" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

            <!-- Campo de usuario -->
            <TextField fx:id="txtUsuario" promptText="Usuario" prefWidth="250"/>

            <!-- Campo de contraseña -->
            <PasswordField fx:id="txtContrasena" promptText="Contraseña" prefWidth="250"/>

            <!-- Label para mostrar mensajes -->
            <Label fx:id="lblMensaje" text="" style="-fx-text-fill: red;"/>

            <!-- Botones -->
            <HBox alignment="CENTER" spacing="10">
                <Button text="Iniciar Sesión" onAction="#handleLogin"/>
                <Button text="Registrarse" onAction="#abrirRegistro"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>


