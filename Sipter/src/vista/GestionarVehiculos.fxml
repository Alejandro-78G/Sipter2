<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controlador.ControladorGestionarVehiculos">

    <VBox spacing="10" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
        <padding>
            <Insets top="15" right="15" bottom="15" left="15"/>
        </padding>

        <Label text="Gestión de Vehículos"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <HBox spacing="10">
            <VBox spacing="5">
                <Label text="Placa:"/>
                <TextField fx:id="txtPlaca" promptText="ABC123"/>
            </VBox>
            <VBox spacing="5">
                <Label text="Marca:"/>
                <TextField fx:id="txtMarca" promptText="Toyota"/>
            </VBox>
            <VBox spacing="5">
                <Label text="Modelo:"/>
                <TextField fx:id="txtModelo" promptText="2024"/>
            </VBox>
            <VBox spacing="5">
                <Label text="Capacidad:"/>
                <TextField fx:id="txtCapacidad" promptText="4"/>
            </VBox>
        </HBox>

        <HBox spacing="10">
            <Button text="Agregar" onAction="#agregarVehiculo"/>
            <Button text="Actualizar" onAction="#actualizarVehiculo"/>
            <Button text="Eliminar" onAction="#eliminarVehiculo"/>
            <Button text="Cargar Vehículos" onAction="#cargarVehiculos"/>
        </HBox>

        <TableView fx:id="tablaVehiculos" prefHeight="300">
            <columns>
                <TableColumn text="ID" fx:id="colId"/>
                <TableColumn text="Placa" fx:id="colPlaca"/>
                <TableColumn text="Marca" fx:id="colMarca"/>
                <TableColumn text="Modelo" fx:id="colModelo"/>
                <TableColumn text="Capacidad" fx:id="colCapacidad"/>
                <TableColumn text="Estado" fx:id="colEstado"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
